<body>
    <h1>Add Product</h1>
    <form action="/add" method="post">
        <input type="text" name="ProductCode" placeholder="Product Code"><br>
        <input type="text" name="ProductName" placeholder="Product Name"><br>
        <input type="date" name="ProductDate" placeholder="Product Date"><br>
        <input type="number" name="ProductOriginPrice" placeholder="Product Origin Price"><br>
        <input type="number" name="Quantity" placeholder="Quantity"><br>
